set $mod Mod4
set $ter /usr/bin/tilda
set $default_gaps_inner 10
set $default_gaps_outer 0
set $wallpaper '$(find $HOME/.local/share/wallpapers/ -type f -iname "*.jpg" | shuf -n 1)'

# special
set $fg #D8DEE9
set $bg #2E3440
set $cur #D8DEE9


# black
set $base00 #2E3440
set $base08 #4C566A

# red
set $base01 #BF616A
set $base09 #BF616A

# green
set $base02 #A3BE8C
set $base0A #A3BE8C

# yellow
set $base03 #EBCB8B
set $base0B #EBCB8B

# blue
set $base04 #81A1C1
set $base0C #81A1C1

# magenta
set $base05 #B48EAD
set $base0D #B48EAD

# cyan
set $base06 #88C0D0
set $base0E #8FBCBB

# white
set $base07 #E5E9F0
set $base0F #ECEFF4



#                    .                       .   
#   ...   ... ...  .||.  ... ...  ... ...  .||.  
